{% extends "base.njk" %}

{% block content %}
  <main>
    <h1>{{ title }}</h1>
    {% if date %}
      <div class="intro" style="margin-bottom: 1rem;">
        <time datetime="{{ date }}">{{ date }}</time>
      </div>
    {% endif %}
    <div class="prose">
      {{ content | fixImgUrls | safe }}
    </div>
  </main>
{% endblock %}

